<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <app.rtcmeetings.ui.widget.ToolbarView
        android:id="@+id/toolbarView"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tv_action_icon="@drawable/ic_add_contact"
        app:tv_action_left_icon="@drawable/ic_arrowback"
        app:tv_text="Contacts"/>

    <app.rtcmeetings.ui.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginStart="@dimen/dp60"
        android:layout_marginEnd="@dimen/dp60"
        app:sv_hint="Search"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContacts"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:scrollbarSize="@dimen/dp4"
        android:scrollbarThumbVertical="@color/lightGray"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/dp8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>